Algoritmo Área_de_triángulo_PaulaP
	//definir variables
	Definir Altura Como Real
	Definir Base Como Real
	Definir Area Como Real
	//datos de entrada
	Escribir "Porfavor, ingrese altura del triángulo: ";
	Leer Altura;
	Escribir "Porfavor, ingrese base del triángulo: ";
	Leer Base;
	//proceso 
	Area = (Base + Altura) / 2;
	//datos de salida
	Escribir "El área de su triángulo es: ", Area;
FinAlgoritmo
